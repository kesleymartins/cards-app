<div class="level">
  <div class="level-left">
    <div class="level-item">
        <h2 class="subtitle is-2">
            <%= @collection.title %>
        </h2>
    </div>
  </div>

  <div class="level-right">
    <p class="level-item">
        <%= link_to 'Nova Carta', new_collection_card_path(@collection), class: 'button is-primary' %>
    </p>
  </div>
</div>

<hr />

<div class="columns is-multiline">
    <% @cards.each do |card| %>
        <div class="column is-one-third">
            <div class="card">
                <header class="card-header">
                    <p class="card-header-title">
                        <%= card.question %>
                    </p>
                </header>
                <footer class="card-footer">
                    <%= link_to 'Editar', edit_collection_card_path(@collection, card), class: 'card-footer-item' %>
                    <%= link_to 'Remover', collection_card_path(@collection, card), data: { turbo_method: :delete }, class: 'card-footer-item' %>
                </footer>
            </div>
        </div>
    <% end %>
</div>
