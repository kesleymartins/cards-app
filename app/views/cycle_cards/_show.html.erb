<% if cycle_card %>
  <div data-controller="cycle-card" class="box">
    <div class="block has-text-justified">
      <p class="is-size-4"><%= cycle_card.card.question %></p>
    </div>

    <div class="has-text-centered">
      <div class="block">
        <button data-cycle-card-target="button" class="button is-info is-light">
          Mostrar Resposta
        </button>
      </div>

      <div data-cycle-card-target="answerBlock" class="block is-hidden">
        <hr />

        <p class="is-size-5"><%= cycle_card.card.answer %></p>

        <hr />
        <div class="is-flex is-justify-content-center	">
          <div class="buttons">

            <%= form_with(model: cycle_card) do |f| %>
              <%= f.hidden_field :card_answer, value: :error %>
            
              <%= f.submit 'Errei', class: 'button is-danger is-light' %>
            <% end %>

            <%= form_with(model: cycle_card) do |f| %>
              <%= f.hidden_field :card_answer, value: :skip %>
            
              <%= f.submit 'Pular', class: 'button is-warning is-light' %>
            <% end %>

            <%= form_with(model: cycle_card) do |f| %>
              <%= f.hidden_field :card_answer, value: :success %>
            
              <%= f.submit 'Acertei', class: 'button is-success is-light' %>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>