<%= turbo_frame_tag :cycle_card_data do %>
  <div data-controller="cycle-card" class="box">
    <div class="block has-text-justified">
      <p class="is-size-4"><%= @cycle_card.card.question %></p>
    </div>

    <div class="has-text-centered">
      <div class="block">
        <button data-action="click->cycle-card#showAnswer" class="button is-info is-light">
          Mostrar Resposta
        </button>
      </div>

      <div id="answer-block" class="block is-hidden">
        <hr />

        <p class="is-size-5"><%= @cycle_card.card.answer %></p>

        <hr />
        <div class="is-flex is-justify-content-center	">
          <div class="buttons">
            <%= link_to 'Errei', nil, class: 'button is-danger is-light' %>
            <%= link_to 'Pular', nil, class: 'button is-warning is-light' %>
            <%= link_to 'Acertei', nil, class: 'button is-success is-light' %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>