<div class="level">
  <div class="level-left">
    <div class="level-item">
      <h2 class="subtitle is-2">
        <%= @cycle.collection.title %>
        <span class="tag is-info">
          <%= @cycle.size %>
        </span>
      </h2>
    </div>
  </div>

  <div class="level-right">
    <p class="level-item">
      <%= link_to 'Buscar carta', cycle_card_path(@cycle.next_cycle_card), data: { turbo_frame: :cycle_card_data}, class: "button is-success" %>
    </p>
  </div>
</div>

<div class="block">
  <progress class="progress is-small" value="3" max="<%= @cycle.size %>"></progress>
</div>

<div class="block">
  <%= turbo_frame_tag :cycle_card_data %>
</div>