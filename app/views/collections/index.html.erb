<h2>Coleções</h2>

<%= link_to 'Nova coleção', new_collection_path %>

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>title</th>
            <th>description</th>
            <th>ações</th>
        </tr>
    </thead>
    <tbody>
        <% @collections.each do |collection| %>
            <tr>
                <td><%= collection.id %></td>
                <td><%= collection.title %></td>
                <td><%= collection.description %></td>
                <td>
                    <%= link_to 'Editar', edit_collection_path(collection) %>
                    <%= button_to 'Remover', collection_path(collection), method: :delete %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>