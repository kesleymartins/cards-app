<!DOCTYPE html>
<html>
  <head>
    <title>CardsApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
    <%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css" %>
    <%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" %>

    <%= javascript_importmap_tags %>
  </head>

  <body>
    <header>
      <%= render 'layouts/navbar' %>
    </header>
  
    <main class="container">
      <div class="my-5">
        <%= render 'layouts/flashmessage' %>
      </div>

      <%# --- page top content --- %>
      <div class="level">
        <div class="level-left">
          <div class="level-item">
            <h2 class="subtitle is-2">
              <%= yield :page_title %>
            </h2>
          </div>
        </div>

        <div class="level-right">
          <p class="level-item">
            <%= yield :page_actions %>
          </p>
        </div>
      </div>
      <%# --- page top content --- %>

      <div class="columns">
        <% if user_signed_in? %>
          <%= render 'layouts/sidebar' %>
        <% end %>

        <div class="column">
          <%= yield :page_filter %>

          <%= yield %>
        </div>
      </div>
    </main>
  </body>
</html>
